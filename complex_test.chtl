html
{
    body
    {
        div
        {
            id: app;
            
            style
            {
                .container
                {
                    max-width: 800px;
                    margin: 0 auto;
                    padding: 20px;
                }
                
                &:hover
                {
                    background-color: #f5f5f5;
                }
            }
            
            script
            {
                {{.container}}->addEventListener('click', () => {
                    console.log('容器被点击了!');
                });
                
                vir appEvents = listen({
                    click: () => {
                        alert('CHTL JS事件触发!');
                    },
                    mouseenter: function() {
                        console.log('鼠标进入容器');
                    }
                });
            }
            
            h1
            {
                text
                {
                    "CHTL复杂功能测试"
                }
            }
            
            button
            {
                id: test-btn;
                
                style
                {
                    background: #007bff;
                    color: white;
                    border: none;
                    padding: 10px 20px;
                    border-radius: 4px;
                    cursor: pointer;
                }
                
                text
                {
                    "点击测试"
                }
            }
        }
    }
}