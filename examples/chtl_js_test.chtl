div
{
    id: container;
    class: interactive-box;
    
    style
    {
        width: 300px;
        height: 200px;
        background-color: #f0f0f0;
        border: 1px solid #ccc;
        cursor: pointer;
        
        .highlight
        {
            background-color: #ffff99;
            transform: scale(1.05);
        }
    }
    
    script
    {
        // CHTL JS 语法示例
        {{container}}->listen({
            click: () => {
                console.log('Container clicked!');
                {{container}}->classList.toggle('highlight');
            },
            
            mouseenter: function() {
                {{container}}->style.backgroundColor = '#e0e0e0';
            },
            
            mouseleave: () => {
                {{container}}->style.backgroundColor = '#f0f0f0';
            }
        });
        
        // 使用箭头操作符
        {{container}}->textContent = "点击我试试!";
        
        // 动画示例
        animate({
            duration: 500,
            easing: 'ease-in-out',
            begin: {
                opacity: 0,
                transform: 'translateY(-20px)'
            },
            end: {
                opacity: 1,
                transform: 'translateY(0)'
            }
        });
    }
    
    text
    {
        "这是一个演示CHTL JS功能的交互式盒子"
    }
}