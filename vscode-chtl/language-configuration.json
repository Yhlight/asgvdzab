{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*\\{",
            "end": "^\\s*\\}"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^.*(\\{[^}]*|\\[[^\\]]*)$",
        "decreaseIndentPattern": "^\\s*(\\}|\\])"
    }
}