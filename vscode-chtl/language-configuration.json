{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["{{", "}}"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["{{", "}}"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        { "open": "[", "close": "]", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["{{", "}}"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "wordPattern": "(\\[[A-Za-z]+\\]|[A-Za-z]+|@[A-Za-z]+)",
    "folding": {
        "markers": {
            "start": "^\\s*\\{",
            "end": "^\\s*\\}"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^.*(\\{[^}]*|\\[[^\\]]*)$",
        "decreaseIndentPattern": "^\\s*(\\}|\\])"
    }
}