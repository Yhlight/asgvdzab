{
    "Template Element": {
        "prefix": "telem",
        "body": [
            "[Template] @Element ${1:ComponentName} {",
            "\t${2:div} {",
            "\t\t$0",
            "\t}",
            "}"
        ],
        "description": "Create a template element"
    },
    "Template Style": {
        "prefix": "tstyle",
        "body": [
            "[Template] @Style ${1:StyleName} {",
            "\t${2:property}: ${3:value};",
            "\t$0",
            "}"
        ],
        "description": "Create a template style"
    },
    "Template Var": {
        "prefix": "tvar",
        "body": [
            "[Template] @Var ${1:VarName} {",
            "\t${2:key}: \"${3:value}\";",
            "\t$0",
            "}"
        ],
        "description": "Create a template variable group"
    },
    "Custom Element": {
        "prefix": "celem",
        "body": [
            "[Custom] @Element ${1:ComponentName} {",
            "\t${2:div} {",
            "\t\t$0",
            "\t}",
            "}"
        ],
        "description": "Create a custom element"
    },
    "Custom Style": {
        "prefix": "cstyle",
        "body": [
            "[Custom] @Style ${1:StyleName} {",
            "\t${2:property}: ;",
            "\t$0",
            "}"
        ],
        "description": "Create a custom style with empty values"
    },
    "Namespace": {
        "prefix": "namespace",
        "body": [
            "[Namespace] ${1:name} {",
            "\t$0",
            "}"
        ],
        "description": "Create a namespace"
    },
    "Import CHTL": {
        "prefix": "import",
        "body": [
            "[Import] @Chtl from \"${1:./path/to/file.chtl}\"${2: as ${3:alias}};$0"
        ],
        "description": "Import a CHTL file"
    },
    "Import Official Module": {
        "prefix": "importo",
        "body": [
            "[Import] @Chtl from chtl::${1:module}${2: as ${3:alias}};$0"
        ],
        "description": "Import an official CHTL module"
    },
    "Element": {
        "prefix": "elem",
        "body": [
            "${1:div} {",
            "\t$0",
            "}"
        ],
        "description": "Create an element"
    },
    "Element with ID": {
        "prefix": "elemid",
        "body": [
            "${1:div} {",
            "\tid: \"${2:elementId}\";",
            "\t$0",
            "}"
        ],
        "description": "Create an element with ID"
    },
    "Element with Class": {
        "prefix": "elemclass",
        "body": [
            "${1:div} {",
            "\tclass: \"${2:className}\";",
            "\t$0",
            "}"
        ],
        "description": "Create an element with class"
    },
    "Text Node": {
        "prefix": "text",
        "body": [
            "text { ${1:Content} }$0"
        ],
        "description": "Create a text node"
    },
    "Style Block": {
        "prefix": "style",
        "body": [
            "style {",
            "\t${1:property}: ${2:value};",
            "\t$0",
            "}"
        ],
        "description": "Create a style block"
    },
    "Style with Class": {
        "prefix": "styleclass",
        "body": [
            "style {",
            "\t.${1:className} {",
            "\t\t${2:property}: ${3:value};",
            "\t\t$0",
            "\t}",
            "}"
        ],
        "description": "Create a style block with class"
    },
    "Style with Hover": {
        "prefix": "stylehover",
        "body": [
            "style {",
            "\t${1:property}: ${2:value};",
            "\t",
            "\t&:hover {",
            "\t\t${3:property}: ${4:value};",
            "\t\t$0",
            "\t}",
            "}"
        ],
        "description": "Create a style block with hover state"
    },
    "Script Block": {
        "prefix": "script",
        "body": [
            "script {",
            "\t$0",
            "}"
        ],
        "description": "Create a script block"
    },
    "CHTL JS Selector": {
        "prefix": "sel",
        "body": [
            "let ${1:element} = {{#${2:elementId}}};$0"
        ],
        "description": "Create a CHTL JS selector"
    },
    "CHTL JS Listen": {
        "prefix": "listen",
        "body": [
            "${1:element}->listen(\"${2:click}\", (${3:e}) => {",
            "\t$0",
            "});"
        ],
        "description": "Add event listener with CHTL JS"
    },
    "CHTL JS Delegate": {
        "prefix": "delegate",
        "body": [
            "${1:element}->delegate(\"${2:click}\", \"${3:.selector}\", (${4:e}) => {",
            "\t$0",
            "});"
        ],
        "description": "Add delegated event listener"
    },
    "CHTL JS Animate": {
        "prefix": "animate",
        "body": [
            "${1:element}->animate({",
            "\tduration: ${2:1000},",
            "\tfrom: { ${3:opacity}: ${4:0} },",
            "\tto: { ${3:opacity}: ${5:1} }",
            "});"
        ],
        "description": "Animate element with CHTL JS"
    },
    "Use Template Element": {
        "prefix": "uelem",
        "body": [
            "@Element ${1:TemplateName}${2: from ${3:namespace}};$0"
        ],
        "description": "Use a template element"
    },
    "Use Template Style": {
        "prefix": "ustyle",
        "body": [
            "@Style ${1:StyleName}${2: from ${3:namespace}};$0"
        ],
        "description": "Use a template style"
    },
    "Use Template Var": {
        "prefix": "uvar",
        "body": [
            "@Var ${1:VarName}.${2:property}${3: from ${4:namespace}}$0"
        ],
        "description": "Use a template variable"
    },
    "Constraint Except": {
        "prefix": "except",
        "body": [
            "except ${1|[Template],@Html div,@Style border|};$0"
        ],
        "description": "Add constraint exception"
    },
    "Inherit Style": {
        "prefix": "inherit",
        "body": [
            "inherit ${1:BaseStyle};$0"
        ],
        "description": "Inherit from another style"
    },
    "Complete CHTL File": {
        "prefix": "chtlfile",
        "body": [
            "// ${1:Description}",
            "",
            "[Template] @Style Theme {",
            "\tprimaryColor: \"#007bff\";",
            "\tfontFamily: \"Arial, sans-serif\";",
            "}",
            "",
            "body {",
            "\tstyle {",
            "\t\tmargin: 0;",
            "\t\tpadding: 20px;",
            "\t\tfont-family: @Var Theme.fontFamily;",
            "\t}",
            "\t",
            "\th1 {",
            "\t\tstyle {",
            "\t\t\tcolor: @Var Theme.primaryColor;",
            "\t\t}",
            "\t\ttext { ${2:Welcome to CHTL} }",
            "\t}",
            "\t",
            "\t$0",
            "}"
        ],
        "description": "Create a complete CHTL file structure"
    }
}